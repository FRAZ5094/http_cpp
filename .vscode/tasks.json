{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build debug",
      "type": "cppbuild",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${fileDirname}/*.cpp",
        "-o",
        "${fileDirname}/main"
      ],
      "options": {
        "problemMatcher": ["$gcc"]
      }
    }
  ]
}
